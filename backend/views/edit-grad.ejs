<%- include('partials/header') %>
<%- include('partials/sidebar') %>

<div class="klopa-backend">
    <div class="edit-podaci dodaj-grad">
        <h4 class="text-dark bg-warning text-center p-2 mt-4 mb-4">
            Podaci o Gradu
        </h4>

        <% if(messages.update) {%>
            <div class="alert alert-success alert-dismissible fade show alert-btn" role="alert">
                <span>
                    <%= messages.update %>
                </span>
                <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        <% } %>

        <% if(messages.error) {%>
            <div class="alert alert-warning alert-dismissible fade show alert-btn" role="alert">
                <span>
                    <%= messages.error %>
                </span>
                <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        <% } %>

        <% result.forEach((item) => {%>
        <form class="form" action="/admin/edit-grad/<%= item.slug %>" method="post" id="editForm">

            <div class="form-group">
                <div class="form-data">
                    <label for="grad" class="form-label">Ime Grada</label>
                    <% if(item.ime) {%>
                    <input type="text" class="form-control" name="grad" value="<%= item.ime %>" required>
                    <%} else {%>
                    <input type="text" class="form-control" name="grad" placeholder="Puno ime grada" required>
                    <%}%>                      
                </div>
            </div>
            <div class="form-group mt-3">
                <div class="form-data">
                    <label for="slug" class="form-label">Slug</label>
                    <% if(item.slug) {%>
                    <input type="text" class="form-control" name="slug" value="<%= item.slug %>" required>
                    <%} else {%>
                    <input type="text" class="form-control" name="slug" placeholder="Slug grada ex: banja-luka" required>
                    <%}%>                   
                </div>
            </div>
            <div class="form-group mt-3">
                <div class="form-data">
                    <label for="kanton" class="form-label">Kanton</label>
                    <% if(item.kanton) {%>
                    <input type="text" class="form-control" name="kanton" value="<%= item.kanton %>">
                    <%} else {%>
                    <input type="text" class="form-control" name="kanton" placeholder="Kanton/Područje grada">
                    <%}%>
                </div>
            </div>
            <div class="form-group mt-3">
                <div class="form-data">
                    <label for="zip" class="form-label">Zip</label>
                    <% if(item.zip) {%>
                    <input type="text" pattern="\d{5}" maxlength="5" title="Unesite orginalni zip kod ex. 71000" class="form-control" name="zip" value="<%= item.zip %>" required>
                    <%} else {%>
                    <input type="text" pattern="\d{5}" maxlength="5" title="Unesite orginalni zip kod ex. 71000" class="form-control" name="zip" placeholder="Zip grada" required>
                    <%}%>               
                </div>
            </div>
            <hr>
            <div class="form-button mb-3">
                <input type="submit" value="Završi" name="submit" class="btn btn-primary">  
                <input type="submit" value="Nazad" name="submit" class="btn btn-warning">
            </div>
        </form>
        <% }) %>
    </div>

</div>

<%- include('partials/footer') -%> 