<%- include('partials/header') -%>
<%- include('partials/sidebar') -%>

<div class="klopa-backend">
    <div class="podaci gradovi-podaci">
        <table class="table table-bordered border-dark">
            <thead class="table-head table-dark">
                <tr>
                    <th class="table-status">
                        Status
                    </th>
                    <th>
                        <label for="grad">Grad</label>
                    </th>
                    <th>
                        <label for="Zip">Zip</label>
                    </th>
                    <th>
                        <label for="kanton">kanton</label>
                    </th>
                    <th>
                        <label for="slug">Slug</label>
                    </th>
                </tr>
            </thead>

            <tbody>
                <% gradovi.forEach((grad) => { %>
                <tr>
                    <th class="table-body-btn">
                        <!-- <button class="btn aktivni-btn"><i class="fa-solid fa-circle-check"></i></button> -->
                        <!-- <button class="btn odbijene-btn"><i class="fa-solid fa-circle-xmark"></i></button> -->
                        <a class="btn edit-btn" href="/admin/edit-grad/<%= grad.slug %>"><i class="fa-solid fa-pen-to-square"></i></a>                    
                    </th>
                    <th class="table-body-grad">
                        <%= grad.ime %>
                    </th>

                    <% if (grad.zip) {%>
                    <th>
                        <%= grad.zip %>
                    </th>
                    <%} else {%>
                    <th>
                        -
                    </th>
                    <%}%>


                    <% if (grad.kanton) {%>
                    <th>
                        <%= grad.kanton %>
                    </th>
                    <%} else {%>
                    <th>
                        -
                    </th>
                    <%}%>

                    <% if (grad.slug) {%>
                    <th>
                        <%= grad.slug %>
                    </th>
                    <%} else {%>
                    <th>
                        -
                    </th>
                    <%}%>

                </tr>
                <%})%>
            </tbody>
        </table> 
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-end">
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">Nazad</a>
            </li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#">Dalje</a>
            </li>
            </ul>
        </nav>
    </div>
    

</div>

<%- include('partials/footer') -%>
