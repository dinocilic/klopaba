<%- include('partials/header') %>
<%- include('partials/sidebar') %>

<div class="klopa-backend">
    <div class="edit-podaci dodaj-grad">
        <h4 class="text-dark bg-warning text-center p-2 mt-4 mb-4">
            Podaci o Gradu
        </h4>
        <% if(messages.dodaj) {%>
            <div class="alert alert-success alert-dismissible fade show alert-btn" role="alert">
                <span>
                    <%= messages.dodaj %>
                </span>
                <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        <% } %>
        <form class="form" action="/admin/dodaj-grad" method="post">
            <div class="form-group">
                <div class="form-data">
                    <label for="ime" class="form-label">Ime Grada *</label>
                    <input type="text" name="grad" class="form-control" placeholder="Puno ime grada" required>
                </div>
            </div>
            <div class="form-group mt-3">
                <div class="form-data">
                    <label for="slug" class="form-label">Slug *</label>
                    <input type="text" name="slug" class="form-control" placeholder="Slug grada ex: banja-luka" required>
                </div>
            </div>
            <div class="form-group mt-3">
                <div class="form-data">
                    <label for="kanton" class="form-label">Kanton</label>
                    <input type="text" name="kanton" class="form-control" placeholder="Kanton/Područje grada">
                </div>
            </div>
            <div class="form-group mt-3">
                <div class="form-data">
                    <label for="zip" class="form-label">Zip *</label>
                    <input type="text" name="zip" pattern="\d{5}" maxlength="5" class="form-control" placeholder="Zip grada" required>
                </div>
            </div>
            <hr>
            <div class="form-button mb-3">
                <input type="submit" value="Dodaj" name="submit" class="btn btn-primary w-100">  
            </div>
        </form>
    </div>

</div>

<%- include('partials/footer') -%> 